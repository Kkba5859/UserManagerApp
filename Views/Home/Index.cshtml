@model IEnumerable<UserManagerApp.Models.User>

<!-- Action Buttons Section -->
<form asp-controller="UserManager" method="post">
    <div class="d-flex justify-content-start mb-3">
        <!-- Block Button -->
        <button type="submit" formaction="@Url.Action("Block", "UserManager")" class="btn btn-warning mr-2">Block</button>

        <!-- Unblock Icon Button -->
        <button type="submit" formaction="@Url.Action("Unblock", "UserManager")" class="btn btn-success mr-2" title="Unblock">
            <i class="fas fa-unlock-alt"></i> Unblock
        </button>

        <!-- Delete Icon Button -->
        <button type="submit" formaction="@Url.Action("Delete", "UserManager")" class="btn btn-danger mr-2" title="Delete">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
    </div>

    <!-- User Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="selectAllHeader" />
                </th>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Registration Date</th>
                <th>Last Login Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="userIds" value="@user.Id" />
                        </td>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.RegistrationDate.ToString("yyyy-MM-dd")</td>
                        <td>@(user.LastLoginDate.HasValue ? user.LastLoginDate.Value.ToString("yyyy-MM-dd") : "Never")</td>
                        <td>@(user.IsBlocked ? "Blocked" : "Active")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script>
        // Select/Deselect All Users
        document.getElementById('selectAllHeader').addEventListener('change', function () {
            var checkboxes = document.querySelectorAll('input[name="userIds"]');
            checkboxes.forEach(checkbox => checkbox.checked = this.checked);
        });
    </script>
}
